@model DrugAmmendment.Models.DropDownClass
@{
    ViewBag.Title = "Dashboard";
}

<link href="~/Scripts/DataTables/datatables.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/DataTables/datatables.min.js"></script>

<script src="https://rawgit.com/unconditional/jquery-table2excel/master/src/jquery.table2excel.js"></script>

<style>
    #client {
        margin:20px;
    }
    #criteriaType{
        margin:20px;
    }
    #DrugDetailsTable {
        margin:100px 20px 20px 20px;
    }
    #activeDrugsBtn, #addDrugBtn,#deleteDrugBtn,#exportToExcel {
        margin: 20px;
    }
    .dataTables_wrapper {
        background-color: white;
        padding:20px;
    }
    .dataTable {
        margin-top: 50px;
        border-top: 2px solid black;
    }
    .dataTables_length{
        margin-bottom:25px;
    }
   
</style>


    <form action="@Url.Action("AddDrugView", "Home")" id="DashboardForm" method="post">
        <select id="client" class="form-control" name="Client" required>
            <option value="">Select Customer</option>
        </select>

        <select id="criteriaType" class="form-control" name="criteriaType">
            <option value="">Select Criteria Type</option>
        </select>

        <input type="button" name="activeDrugs" value="Get Drug List" id="activeDrugsBtn" class="btn-primary btn-lg" title="Get All Drug Details" />
        <input type="submit" name="addDrug" value="Add New Drug" id="addDrugBtn" class="btn-primary btn-lg" title="Add New Drug" />
        <input type="button" name="deleteDrug" value="Delete Drug" id="deleteDrugBtn" class="btn-primary btn-lg" title="Delete Drug" />
        <input type="button" name="exportToExcel" value="Export To Excel" id="exportToExcel" class="btn-primary btn-lg" title="Export Active Drugs to Excelsheet" />
            
        

        <div id="DrugDetailsDiv" >

        </div>
    </form>


<script src="~/Scripts/Dashboard.js"></script>
